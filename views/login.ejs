<html>
    <head>
      <title>login</title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="icon" type="image/x-icon" href="icon.png">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <style>

      body{
        /* background: linear-gradient(
          to right,
          #F7CCAC 0%,
          #F7CCAC 50%,
          #3A3845 50%,
          #3A3845 100%
        ); */
        background-image: url("questionmark.png");
        background-repeat: no-repeat;
        background-size: 70%;
        background-position:center ;

      }

      .ml15 {
        font-weight: 800;
        font-size: 3.8em;
        text-transform: uppercase;
        letter-spacing: 0.5em;
      }

      .ml15 .word {
        display: inline-block;
        line-height: 1em;
      }

      .box{
        background-color: #F7CCAC;
        width: 60%;
        margin: 0 auto;
        text-align: center;
        margin-top: 10%;
        padding: 2%;
        opacity: 0.8;
      }
      button{
        margin-bottom: 2%;
      }

      a{
        color: #826F66;
        text-decoration: none;
      }

      a:hover{
        color: black;
        text-decoration: none;
      }

      .in{
        margin: 1%;
      }

      .r2{
        margin: 3%;
      }

      hr{
        width:10%;
        margin: 2% auto;
      }
    </style>
    <body>
      
      <div class="box container">
        <form action="/login" method="post">
          <center><h1>Log In </h1></center>
          <hr>
          <center><p>Welcome back! Login to access your account.</p></center>
          
          <input class="in" type="text" placeholder="Enter User ID"  name="username" required>
          <br>
          <input class="in" type="password" placeholder="Enter Password"  name="password" required>
          <br>
          <input class="in" type="password" placeholder="Repeat Password"  name="rwpassword" required>
          <br>
          
          <div class="b2 row r2">
            <div class="col-lg-12 col-md-6 col-sm-6">
              <label>
                <input type="checkbox" checked="checked" name="remember"> Remember Me
              </label>
            </div>

            <!-- <div class="col-lg-12 col-md-6 col-sm-6">
              <span class="psw"><a href="#">Forgot Password?</a></span>
            </div> -->
          </div>

          <div>
            <button type="submit" class="btn btn-dark">Login</button>
          </div>
            

          <div class="container">
            <div class="row">
              <div class="col-lg-6 col-md-12 col-sm-12">
                <p><A HREF="/studentregister">Register as a Student </A></p>
              </div>
              <div class="col-lg-6 col-md-12 col-sm-12">
                <p><A HREF="/professorregister">Register as a Professor </A></p>
              </div>
            </div>  
          </div>  
        </form>
      </div>
    </body>
</html>