<html>
    <head>
      <title>Reset Password</title>
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <link rel="icon" type="image/x-icon" href="icon.png">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <style>

      body{
        /* background: #b92b27;
        background: -webkit-linear-gradient(to right, #1565C0, #b92b27);  
        background: linear-gradient(to right, #1565C0, #b92b27);   */
        background-image: url(https://images.unsplash.com/photo-1509475826633-fed577a2c71b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1742&q=80);
      }

      .ml15 {
        font-weight: 800;
        font-size: 3.8em;
        text-transform: uppercase;
        letter-spacing: 0.5em;
      }

      .ml15 .word {
        display: inline-block;
        line-height: 1em;
      }

      .box{
        background-color: white;
        width: 70%;
        margin: 0 auto;
        text-align: center;
        margin-top: 10%;
        padding: 2%;
        opacity: 0.8;
      }
      button{
        margin-bottom: 2%;
      }

      a{
        color: #C6BCBA;
      }

      .in{
        margin: 1%;
      }

      .r2{
        margin: 3%;
      }

    </style>
    <body>
      <div class="box container">
        <form action="/changepassword" method="post">
          <center><h1>Reset Password </h1></center>
          <center><p></p></center>
          
            <div class="row">
              <div class="col-lg-4 col-md-6 col-sm-12">
                <input class="in" type="text" placeholder="Enter User ID"  name="username" required>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12">
                <input class="in" type="password" placeholder="Enter new Password"  name="password" required>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-12">
                <input class="in" type="number" placeholder="Enter Mobile number"  name="mobile" required>
              </div>
            </div>  
          
          <div class="b2 row r2">
          </div>

          <div>
            <button type="submit" class="btn btn-primary">Reset</button>
          </div>
        </form>
      </div>
    </body>
</html>